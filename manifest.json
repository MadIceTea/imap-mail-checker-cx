{
    "manifest_version": 2,

    "name": "IMAP Mail Checker",
    "description": "",
    "version": "1.1.7",
    "icons": {
      "128": "icon_128.png"
    },
    "permissions": [
        "alarms",
        "storage",
        "notifications",
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "options_page": "option.html",
    "background": {
      "persistent": true,
      "page": "background.html"
    },
    "browser_action": {
        "default_icon": {
            "38": "daummail_not_logged_in.png"
        }
    }
}
